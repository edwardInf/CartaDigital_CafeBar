<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ItemDetalle"
    tools:showIn="@layout/item_detalle_activity"
    android:background="#FFF">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:paddingTop="15dp">

      <TextView
          android:id="@+id/txt_nombreItem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textSize="22sp"
          android:layout_marginBottom="15dp"
          android:paddingLeft="14dp"
          android:paddingRight="14dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:paddingTop="15dp"
       android:layout_marginBottom="10dp"
       android:layout_gravity="center_vertical">

      <TextView
          android:id="@+id/txt_cant"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:layout_marginBottom="15dp"
          android:paddingLeft="14dp"
          android:paddingRight="14dp"
          android:text="Cantidad: 1"
          android:layout_weight="1"/>



      <TextView
          android:id="@+id/txt_precioItem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginBottom="15dp"
          android:paddingLeft="14dp"
          android:paddingRight="14dp"
          android:layout_weight="0"
          android:text="1"/>
   </LinearLayout>

       <SeekBar
           android:id="@+id/seekBar"
           android:layout_width="180dp"
           android:layout_height="match_parent"
           android:max="15"
           android:min="1"
           android:progress="1"
           android:layout_marginBottom="15dp"/>

      <TextView
      android:id="@+id/txt_infoItem"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textSize="18sp"
      android:layout_marginBottom="15dp"
      android:paddingLeft="14dp"
      android:paddingRight="14dp"/>
      <TextView
          android:id="@+id/txt_detalleItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:layout_marginBottom="14dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>



   </LinearLayout>



</android.support.v4.widget.NestedScrollView>